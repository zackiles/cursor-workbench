{
  "name": "cursor-workbench",
  "displayName": "Cursor Workbench - Rule Editor",
  "version": "0.1.0",
  "description": "Advanced rule editor for Cursor IDE with team collaboration, Git synchronization, and intelligent frontmatter management",
  "publisher": "zackiles",
  "icon": "logo.png",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "AI",
    "Debuggers",
    "Linters",
    "Machine Learning",
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./bin/extension.js",
  "enabledApiProposals": [
    "cursor",
    "control",
    "externalUriOpener",
    "resolvers"
  ],
  "contributes": {
    "customEditors": [
      {
        "viewType": "customFileEditor",
        "displayName": "Rule Editor",
        "selector": [
          {
            "filenamePattern": "*.rule"
          },
          {
            "filenamePattern": "*.mdc"
          },
          {
            "filenamePattern": "*.rule",
            "scheme": "cursorfs"
          },
          {
            "filenamePattern": "*.mdc",
            "scheme": "cursorfs"
          }
        ],
        "priority": "default"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "rulesExplorer",
          "name": "Cursor Workbench"
        }
      ]
    },
    "commands": [
      {
        "command": "rulesExplorer.refresh",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "rulesExplorer.settings",
        "title": "Settings",
        "icon": "$(gear)"
      },
      {
        "command": "rulesExplorer.syncFile",
        "title": "Sync File",
        "icon": "$(sync)"
      },
      {
        "command": "rulesExplorer.refreshSettings",
        "title": "Refresh Settings View",
        "icon": "$(refresh)"
      }
    ],
    "keybindings": [
      {
        "command": "rulesExplorer.refreshSettings",
        "key": "ctrl+shift+r",
        "mac": "cmd+shift+r",
        "when": "activeWebviewPanelId == 'cursorWorkbenchSettings'"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "rulesExplorer.refresh",
          "when": "view == rulesExplorer",
          "group": "navigation@1"
        },
        {
          "command": "rulesExplorer.settings",
          "when": "view == rulesExplorer",
          "group": "navigation@2"
        }
      ],
      "view/item/context": [
        {
          "command": "rulesExplorer.syncFile",
          "when": "view == rulesExplorer && viewItem == ruleFile",
          "group": "inline"
        },
        {
          "command": "rulesExplorer.syncFile",
          "when": "view == rulesExplorer && viewItem == virtualRuleFile",
          "group": "inline"
        }
      ]
    }
  },
  "scripts": {
    "build": "node scripts/build.js --production",
    "package": "node scripts/build.js --production",
    "test": "node scripts/build.js --dev && node scripts/test.js",
    "test:local": "echo 'Running local tests...' && npm run build",
    "verify:package": "echo 'Verifying package...' && ls -la dist/*.vsix",
    "release:ovsx": "ovsx publish --pat $OPEN_VSX_TOKEN",
    "dev": "node scripts/build.js --dev && open -a 'Visual Studio Code' --args --disable-extensions --enable-proposed-api --extensionDevelopmentPath=\"$PWD\" \"$PWD\" & node scripts/build.js --dev --watch",
    "dev:isolated": "node scripts/build.js --dev && code --disable-extensions --enable-proposed-api --extensionDevelopmentPath=\"$PWD\" \"$PWD\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zackiles/cursor-workbench.git"
  },
  "author": "zackiles",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/zackiles/cursor-workbench/issues"
  },
  "homepage": "https://github.com/zackiles/cursor-workbench#readme",
  "dependencies": {
    "marked": "^12.0.2",
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "@types/marked": "^6.0.0",
    "@types/node": "^20.12.12",
    "@types/react": "^19.1.6",
    "@types/react-dom": "^19.1.6",
    "@types/vscode": "^1.85.0",
    "esbuild": "^0.19.12",
    "ovsx": "^0.10.4",
    "typescript": "^5.4.5",
    "vsce": "^2.15.0"
  }
}
