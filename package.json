{
  "name": "cursor-workbench",
  "displayName": "Cursor Workbench",
  "version": "0.0.1",
  "description": "Generic VS Code extension for editing files with YAML front matter and content",
  "publisher": "cursor-workbench",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Cursor",
    "AI",
    "Agentic AI",
    "Claude Code",
    "Windsurf"
  ],
  "activationEvents": [
    "onCustomEditor:customFileEditor"
  ],
  "main": "./bin/extension.js",
  "enabledApiProposals": [
    "cursor",
    "control",
    "externalUriOpener",
    "resolvers"
  ],
  "contributes": {
    "customEditors": [
      {
        "viewType": "customFileEditor",
        "displayName": "Custom File Editor",
        "selector": [
          {
            "filenamePattern": "*.rule"
          }
        ],
        "priority": "default"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "rulesExplorer",
          "name": "Cursor Workbench",
          "when": "workspaceFolderCount > 0"
        }
      ]
    },
    "commands": [
      {
        "command": "rulesExplorer.refresh",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "rulesExplorer.settings",
        "title": "Settings",
        "icon": "$(gear)"
      },
      {
        "command": "rulesExplorer.syncFile",
        "title": "Sync File",
        "icon": "$(sync)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "rulesExplorer.refresh",
          "when": "view == rulesExplorer",
          "group": "navigation@1"
        },
        {
          "command": "rulesExplorer.settings",
          "when": "view == rulesExplorer",
          "group": "navigation@2"
        }
      ],
      "view/item/context": [
        {
          "command": "rulesExplorer.syncFile",
          "when": "view == rulesExplorer && viewItem == ruleFile",
          "group": "inline"
        }
      ]
    }
  },
  "scripts": {
    "build": "node scripts/build.js",
    "watch": "node scripts/build.js --watch",
    "test": "echo \"Error: no test specified\" && exit 1",
    "package": "vsce package --out dist/cursor-workbench-0.0.1.vsix",
    "vscode:prepublish": "npm run build",
    "dev": "npm run watch",
    "hot-reload": "node scripts/build.js --watch --auto-reload",
    "test:local": "node scripts/test-local.js",
    "verify:package": "node scripts/verify-package.js",
    "install:local": "code --install-extension dist/cursor-workbench-0.0.1.vsix",
    "uninstall-extension": "code --uninstall-extension cursor-workbench.cursor-workbench",
    "release:local": "node scripts/release-local.js",
    "dev:install": "npm run build && npm run package && npm run install:local"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zackiles/cursor-workbench.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/zackiles/cursor-workbench/issues"
  },
  "homepage": "https://github.com/zackiles/cursor-workbench#readme",
  "dependencies": {
    "@mdxeditor/editor": "^3.35.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "@types/node": "^20.12.12",
    "@types/react": "^19.1.6",
    "@types/react-dom": "^19.1.6",
    "@types/vscode": "^1.85.0",
    "esbuild": "^0.19.12",
    "typescript": "^5.4.5",
    "vsce": "^2.15.0"
  }
}
