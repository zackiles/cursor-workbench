  "version": "0.2.0",
  "configurations": [
    {
      "name": "Extension (Isolated)",
      "type": "extensionHost",
      "request": "launch",
      "args": [
        "--disable-extensions",
        "--extensionDevelopmentPath=${workspaceFolder}"
      ],
      "outFiles": [
        "${workspaceFolder}/bin/**/*.js"
      ],
      "preLaunchTask": "npm: build"
    },
    {
      "name": "Extension (With Other Extensions)",
      "type": "extensionHost",
      "request": "launch",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}"
      ],
      "outFiles": [
        "${workspaceFolder}/bin/**/*.js"
      ],
      "preLaunchTask": "npm: build"
    }
  ]
}
